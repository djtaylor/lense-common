[
    {
        "__PARAMS__": {
            "uuid": [true, null]
        }
    },
    {
        "var#user": {
            "call": "LENSE.OBJECTS.USER.get",
            "kwargs": {
                "uuid": "#__DATA__.uuid"
            },
            "ensure": {
                "isnot": null,
                "code": 400,
                "error": "Cannot find user account!"
            }
        }
    },
    {
        "var#resetToken": {
            "call": "LENSE.OBJECTS.USER.grant_token",
            "args": ["#user"],
            "kwargs": {
                "overwrite": true
            }
        }
    },
    {
        "response": {
            "data": {
                "uuid": "#__DATA__.uuid",
                "key": "#resetToken"
            },
            "message": "Reset user token"
        }
    }
]