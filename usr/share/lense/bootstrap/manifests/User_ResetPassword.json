[
    {
        "__PARAMS__": {
            "uuid": [true, null],
            "password": [false, "LENSE.rstring"]
        }
    },
    {
        "var#user": {
            "call": "LENSE.OBJECTS.USER.get",
            "kwargs": {
                "uuid": "#__DATA__.uuid"
            },
            "ensure": {
                "isnot": null,
                "code": 400,
                "error": "Cannot find user account!"
            }
        }
    },
    {
        "do#resetPassword": {
            "call": "#user.set_password",
            "args": ["#__DATA__.password"]
        }
    },
    {
        "do#savePassword": {
            "call": "#user.save"
        }
    },
    {
        "response": {
            "uuid": "#__DATA__.uuid"
        }
    }
]